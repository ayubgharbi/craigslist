<!DOCTYPE html>
<html>
  <head>
    <title>CraigslistClone</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="main">
      <div class="main-left">
        <p><strong><%= link_to "Craigslist Clone", root_path %></strong></p>

        <%= render "categories/category_sidebar" if controller.controller_name == "categories" %>

        <%= link_to "Create new post", new_post_path if controller.controller_name == "public" %>
      </div>
      <div class="main-right">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
